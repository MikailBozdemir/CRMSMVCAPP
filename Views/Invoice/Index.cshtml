@model List<List<Invoice>>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/ShoppingLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Fatura</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Fatura</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


@for (int i = 0; i < Model.Count; i++)
{
      <div class="container-fluid">
        <div class="row">
            <div class="col-12">
              

               
                <div class="invoice p-3 mb-3">
                  
                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fas fa-globe"></i> Hepsi Şurada Aş.
                                <small class="float-right">Date: &nbsp; @Model[i][0].InvoiceDate</small>
                            </h4>
                        </div>
                       
                    </div>
                   
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            From
                            <address>
                                <strong>Hepsi Şuarada</strong><br>
                                Fatih Mah. 219.Sk. No:9<br>
                                İstanbul/Esenler<br>
                                Phone: (533)6927531<br>
                                Email: kardeslerKundura@gmail.com
                            </address>
                        </div>
                     
                        <div class="col-sm-4 invoice-col">
                            To
                            <address>
                                <strong> @Model[i][0].UserName</strong><br>
                                @Model[i][0].Adress
                                
                               
                            </address>
                        </div>
                      
                        <div class="col-sm-4 invoice-col">
                            <b>Invoice @Model[i][0].InvoiceId</b><br>
                            <br>
                            <b>Siparis Numarası:</b>@Model[i][0].InvoiceId <br>
                            <b>Ödeme Türü:</b> 2/22/2014<br>
                            
                        </div>
                       
                    </div>
                    
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ürün Adı</th>
                                        <th>Adet</th>
                                        
                                        <th>Ara Toplam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int j = 0; j < Model[i].Count; j++)
                                    {
    
                                    <tr>
                                        <td>@(j+1)</td> 
                                        <td>@Model[i][j].ProductName</td>
                                            <td>@Model[i][j].Amount</td>
                                        
                                        <td>@Model[i][j].TotalPriceByProduct</td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>


                    <div class="row">

                        <div class="col-6">
                            <p class="lead">Payment Methods:</p>
                            <img src="~/AdminLTE-3.0.4/dist/img/credit/visa.png" alt="Visa">
                            <img src="~/AdminLTE-3.0.4/dist/img/credit/mastercard.png" alt="Mastercard">
                            <img src="~/AdminLTE-3.0.4/dist/img/credit/american-express.png" alt="American Express">
                            <img src="~/AdminLTE-3.0.4/dist/img/credit/paypal2.png" alt="Paypal">

                            <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">

                            </p>
                        </div>

                        <div class="col-6">
                            <p class="lead">Ödenme Türü</p>

                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th style="width:50%">Ara Toplam</th>
                                        <td>@Model[i][0].TotalPrice &nbsp; TL</td>
                                    </tr>
                                   
                                    <tr>
                                        <th>Kargo Ücreti:</th>
                                        <td>Ücretsiz</td>
                                    </tr>
                                    <tr>
                                        <th>Toplam:</th>
                                        <td>@Model[i][0].TotalPrice &nbsp; TL</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </div>


                </div>

            </div>
        </div>
    </div>
    <br />
    <br />
}

<a href="/Invoice/ExportInvoiceToExcel" class="btn btn-primary fas fa-print">Faturaları İndir</a>

    
    
    



